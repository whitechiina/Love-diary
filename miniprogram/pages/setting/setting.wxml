<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">
    <!-- 头像 -->
    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <!-- ID -->
    <view class="text-xl">
      <open-data type="userNickName"></open-data>
    </view>
    <!-- 个性签名 -->
    <view class="margin-top-sm">为我一挥手，如临万壑松</view>
    <view class="margin-top-sm">
      <text>By: jinyaowei.xyz</text>
    </view>
    <image src="https://cdn.nlark.com/yuque/0/2021/gif/428808/1615900277974-542929f2-4cf9-4574-8408-7eec42b7db53.gif" mode="scaleToFill"
      class="gif-wave"></image>
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-orange">12/07</view>
      <view class="margin-top-sm">
        <text class="cuIcon-evaluate"></text> Y的生日</view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green">7/10</view>
      <view class="margin-top-sm">
        <text class="cuIcon-evaluate"></text> 瑶瑶的生日</view>
    </view>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="changeimage">
        <text class="cuIcon-friend text-grey"></text>
        <text class="text-grey">自定义头像&背景</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="photo">
        <text class="cuIcon-picfill text-grey"></text>
        <text class="text-grey">照片墙</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="date">
        <text class="cuIcon-location text-grey"></text>
        <text class="text-grey">地图</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/about" hover-class="none">
        <text class="cuIcon-info text-grey"></text>
        <text class="text-grey">关于</text>
      </navigator>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>