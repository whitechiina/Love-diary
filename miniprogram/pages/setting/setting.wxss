page{
  padding-bottom: 100rpx;
}

.ns {
   width: 100%;
   height: 135rpx;
   text-align:center;
   line-height: 135rpx; 
   color: white;
   font-weight:bold;
   background:linear-gradient(to right, #ff9700 , #ed1c24);
   position: absolute;
   top: 0;
   left: 0;
   z-index: 99;
}

.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.text-xl {
  font-size: 30px;
}

.png {
  border-radius: 50%;
  margin-bottom: 20rpx;
}