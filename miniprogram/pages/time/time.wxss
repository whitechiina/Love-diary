page{
  height:100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bg {
  width: 400rpx;
  height: 400rpx;
  font-size: 2.5em;
  border: 10rpx solid #fff;
}

.middle {
  text-align: center;
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.middle .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.middle .content .time {
  padding: 70rpx;
}

.middle .content .time text {
  font-size: 50rpx;
  letter-spacing: 4rpx;
  font-weight: 900;
  font-style: oblique;
  background-color: transparent;
  background-image: linear-gradient(#ffe21d, #ffe21d);
  background-position: 0 85%;
  background-size: 100% 20%;
  background-repeat: no-repeat;
  text-shadow: white 0 0 10rpx;
}
