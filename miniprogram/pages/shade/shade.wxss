.bg {
  width: 100%;
  height: 100vh;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  background-image: url(https://cdn.nlark.com/yuque/0/2021/jpeg/428808/1615345064893-f6471abd-a346-47c5-88c0-060ec0255d78.jpeg);
  background-size: contain;
}

.bg .middle {
  text-align: center;
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.bg .middle contnet {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.middle .solid-bottom::after {
  border-bottom: none !important;
}


.phcolor {
  color: #fff;
  font-size: 28rpx;
}
